    script[src="vendor/bootstrap/js/bootstrap.min.js"]
    script[src="vendor/jquery.easing.min.js"]
    script[src="vendor/jquery.mousewheel.min.js"]
    script[src="vendor/jquery.nicescroll.min.js"]
    script[src="vendor/jquery.nicescroll.min.js"]
    script[src="vendor/waypoints.min.js"]
    script[type="text/javascript" src="vendor/fancybox/source/jquery.fancybox.pack.js"]
    script[src="vendor/jquery.mixitup.min.js"]
    script[src="vendor/jquery.validate.min.js"]
    script[src="vendor/placeholders.jquery.min.js"]
    script[src="vendor/cross-browser.js"]
    script[src="js/main.js"]
